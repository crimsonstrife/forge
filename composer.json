{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "crimsonstrife/forge",
    "type": "project",
    "description": "The official Laravel starter kit for Livewire.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*",
        "ashallendesign/short-url": "^8.3",
        "blaspsoft/blasp": "^2.1",
        "calebporzio/sushi": "^2.5",
        "doctrine/dbal": "^4.3",
        "filament/filament": "^4.0",
        "filament/spatie-laravel-settings-plugin": "^4.0",
        "guzzlehttp/guzzle": "^7.10",
        "kalnoy/nestedset": "^6.0",
        "knuckleswtf/scribe": "^5.3",
        "laravel/folio": "^1.1",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.33.0",
        "laravel/jetstream": "^5.3",
        "laravel/pennant": "^1.18",
        "laravel/pulse": "*",
        "laravel/reverb": "^1.0",
        "laravel/sanctum": "^4.0",
        "laravel/socialite": "^5.23",
        "laravel/telescope": "^5.11",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1.1",
        "livewire/livewire": "^3.6",
        "livewire/volt": "^1.7",
        "mchev/banhammer": "^2.4",
        "meilisearch/meilisearch-php": "^1.15",
        "metalogico/laravel-formello": "^1.2",
        "mews/purifier": "^3.4",
        "nesbot/carbon": "^3.10",
        "omaressaouaf/laravel-id-generator": "^1.2",
        "owen-it/laravel-auditing": "^14.0",
        "ramsey/uuid": "^4.9",
        "socialiteproviders/discord": "^4.2",
        "socialiteproviders/gitea": "^4.1",
        "socialiteproviders/github": "^4.1",
        "socialiteproviders/gitlab": "^4.1",
        "spatie/ignition": "^1.15",
        "spatie/laravel-activitylog": "^4.10",
        "spatie/laravel-data": "^4.17",
        "spatie/laravel-deleted-models": "^1.1",
        "spatie/laravel-medialibrary": "^11.14",
        "spatie/laravel-permission": "^6.21",
        "spatie/laravel-settings": "^3.4",
        "spatie/laravel-sluggable": "^3.7",
        "spatie/laravel-tags": "^4.10",
        "spatie/laravel-webhook-client": "^3.4",
        "spatie/laravel-webhook-server": "^3.8",
        "tapp/filament-auditing": "^4.0",
        "teamtnt/laravel-scout-tntsearch-driver": "^15.0",
        "tinymce/tinymce": "^8.0",
        "whitecube/laravel-cookie-consent": "^1.3",
        "xetaio/xetaravel-mentions": "^12.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.6",
        "laravel/boost": "^1.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.8",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
